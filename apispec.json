{
    "openapi" : "3.0.3",
    "info": {
        "title": "Nandar RESTful API",
        "description": "API spec for Nandar RESTful API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api"
        }
    ],
    "paths": {
        "/categories": {
            "get": {
                "tags": ["Categories API"],
                "description": "List all categories",
                "responses": {
                    "200":{
                        "description": "Success get all categories",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schema/category"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Categories API"],
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties": {
                                    "name":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Create Categories",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "properties": {
                                        "code":{
                                            "type": "number"
                                        },
                                        "status":{
                                            "type": "string"
                                        },
                                        "data":{
                                            "$ref": "#/components/schema/category"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "category":{
                "type": "object",
                "properties": {
                    "id":{
                        "type": "number"
                    },
                    "name":{
                        "type": "string"
                    }
                }
            }
        }
    }

}